extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(5000)
  
  h1(class="mb-4") Chinh sua nhom quyen

  form(
    action=`${prefixAdmin}/roles/edit/${data.id}/?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="title") Tieu de
      input(
        type="text"
        class="form-control"
        id="title" 
        name="title"
        required
        value=data.title
      )
    div(class="form-group")
      label(for="desc") Mo ta
      input(
        type="text"
        class="form-control "
        id="desc"
        name="description"
        value=data.description
      )
    button(
        type="submit"
        class="btn btn-primary"
      ) Cap nhat


  script(src="/admin/js/product.js")
